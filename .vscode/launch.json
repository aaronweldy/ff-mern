    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend Server",
            "skipFiles": [
                "<node_internals>/**",
                "**node_modules/**"
            ],
            "program": "${workspaceFolder}/backend/dist/index.js",
            "cwd": "${workspaceFolder}/backend",
            "preLaunchTask": "build-backend",
            "outFiles": [
                "${workspaceFolder}/backend/dist/**/*.js"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
        }
    ]
}