{
  "extends": "@tsconfig/create-react-app/tsconfig.json",
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "react": [ "./node_modules/@types/react" ]
    },
  },

  "references": [
    {
      "path" : "../ff-types"
    }
  ],
  "exclude": [
    "node_modules",
    "tsbuild",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "./node_modules\/@firebase\/auth"
  ],
}