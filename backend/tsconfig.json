{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2020",
    "module": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "typeRoots": [
      "src/types"
    ],
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "esm": true
  },
  "references": [
    {
      "path": "../ff-types"
    }
  ],
  "include": [
    "src/**/*"
  ]
}